# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET		/about						controllers.Application.about
POST	/upload						controllers.Application.upload
GET		/msg						controllers.Application.msg(title: String ?= "", text: String ?= "", action: String ?= "", error: Boolean ?= false)
GET		/area/new					controllers.Area.newarea
POST	/area/new					controllers.Area.newareajson
GET		/editor						controllers.Editor.index
GET		/browse						controllers.Browse.index

# Map Bootstrap images
GET     /assets/img/glyphicons-halflings.png            controllers.Assets.at(path="/public", file="/images/glyphicons-halflings.png")
GET     /assets/img/glyphicons-halflings-white.png      controllers.Assets.at(path="/public", file="/images/glyphicons-halflings-white.png")


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file				controllers.Assets.at(path="/public", file)