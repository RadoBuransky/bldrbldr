# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET		/about						controllers.Application.about
#POST	/gym/new					controllers.GymCtrl.newGym
#GET	/gym/validate/:secret		controllers.GymCtrl.validate(secret)
#GET	/gym/approve/:secret		controllers.GymCtrl.approve(secret)
#GET	/gym/list					controllers.GymCtrl.list
GET		/editor						controllers.Editor.index
POST	/boulder/new				controllers.Boulder.upload
GET		/:gymHandle/new				controllers.GymCtrl.newBoulder(gymHandle)
GET		/:gymHandle					controllers.GymCtrl.get(gymHandle, s: Option[String])
GET		/:gymHandle/:routeId		controllers.Boulder.get(gymHandle, routeId)
DELETE	/:gymHandle/:routeId		controllers.Boulder.delete(gymHandle, routeId)
PUT 	/:gymHandle/:routeId/flag/:flagId		controllers.Boulder.flag(gymHandle, routeId, flagId)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file				controllers.Assets.at(path="/public", file)