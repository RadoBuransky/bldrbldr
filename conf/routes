# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /*path/                     controllers.Application.untrail(path: String)

# Home page
GET     /                           controllers.Application.index

#POST	/gym/new					controllers.GymCtrl.newGym
#GET	/gym/validate/:secret		controllers.GymCtrl.validate(secret)
#GET	/gym/approve/:secret		controllers.GymCtrl.approve(secret)
#GET	/gym/list					controllers.GymCtrl.list
#GET	/editor						controllers.Editor.index

POST	/climbing/:gymHandle/new	                    controllers.Boulder.upload(gymHandle)
GET		/climbing/:gymHandle/new		        		controllers.GymCtrl.newBoulder(gymHandle)
GET		/climbing/:gymHandle	        				controllers.GymCtrl.get(gymHandle, s: Option[String])
GET		/climbing/:gymHandle/:routeId           		controllers.Boulder.get(gymHandle, routeId)
DELETE	/climbing/:gymHandle/:routeId	            	controllers.Boulder.delete(gymHandle, routeId)
PUT 	/climbing/:gymHandle/:routeId/flag/:flagId		controllers.Boulder.flag(gymHandle, routeId, flagId)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file				controllers.Assets.at(path="/public", file)